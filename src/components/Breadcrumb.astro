---
// Remove current url path and remove trailing slash if exists
const currentUrlPath = Astro.url.pathname.replace(/\/+$/, "");

// Get url array from path
// eg: /tags/tailwindcss => ['tags', 'tailwindcss']
const breadcrumbList = currentUrlPath.split("/").slice(1);

// Path name to Chinese mapping
const pathNameMap: Record<string, string> = {
  posts: "文章",
  tags: "标签",
  archives: "归档",
  search: "搜索",
  about: "关于",
};

// if breadcrumb is 首页 > 文章 > 1 <etc>
// replace posts with 文章 (page number)
if (breadcrumbList[0] === "posts") {
  const pageNum = breadcrumbList[1] || 1;
  breadcrumbList.splice(0, 2, `文章${Number(pageNum) === 1 ? "" : "（第 " + pageNum + " 页）"}`);
}

// if breadcrumb is 首页 > 标签 > [tag] > [page] <etc>
// replace [tag] > [page] with [tag] (page number)
if (breadcrumbList[0] === "tags" && !isNaN(Number(breadcrumbList[2]))) {
  const pageNum = breadcrumbList[2];
  breadcrumbList.splice(
    1,
    3,
    `${breadcrumbList[1]}${Number(pageNum) === 1 ? "" : "（第 " + pageNum + " 页）"}`
  );
}

// Map path names to Chinese for display
const getBreadcrumbText = (path: string): string => {
  // Check if it's already formatted (contains Chinese characters for page numbers)
  if (path.includes("（第") || path.includes("文章") || path.includes("标签")) {
    return path;
  }
  // Map path name to Chinese
  return pathNameMap[path] || decodeURIComponent(path);
};
---

<nav class="app-layout mt-8 mb-1" aria-label="breadcrumb">
  <ul
    class="font-light [&>li]:inline [&>li:not(:last-child)>a]:hover:opacity-100"
  >
    <li>
      <a href="/" class="opacity-80">首页</a>
      <span aria-hidden="true" class="opacity-80">&raquo;</span>
    </li>
    {
      breadcrumbList.map((breadcrumb, index) => {
        const displayText = getBreadcrumbText(breadcrumb);
        // Get the original path for href (remove page number suffix if exists)
        const hrefPath = breadcrumb.split("（")[0];
        
        return index + 1 === breadcrumbList.length ? (
          <li>
            <span
              class:list={["capitalize opacity-75", { lowercase: index > 0 }]}
              aria-current="page"
            >
              {/* make the last part lowercase in 首页 > 标签 > some-tag */}
              {displayText}
            </span>
          </li>
        ) : (
          <li>
            <a href={`/${hrefPath}/`} class="capitalize opacity-70">
              {displayText}
            </a>
            <span aria-hidden="true">&raquo;</span>
          </li>
        );
      })
    }
  </ul>
</nav>
